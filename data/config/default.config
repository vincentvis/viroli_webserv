    	server {	     listen 0.0.0.0:8080;
    server_name localhost www.localhost;
    error_page 404 not_found.html

    location / {
        root /data/site1/html;
        allowed_methods GET;
        index index.html; autoindex on;
    }

    location /redirect {
        allowed_methods GET;
        return 301 http://localhost:8080/redirection_example/301.html
    }

    location /uploads/ {
        allowed_methods POST;

    }
}