# Rules for config files
#
# - There can only be server blocks, no other first level block is allowed
# - each server block needs at least the following parameters
#   - listen (in the format host:port)
#   - listen (in the format host:port)


server {

    # listen
    # possible formats:
    # {ip}
    # {ip}:{port}
    # {port}
    # {hostname}        -- let's not do this one
    # {hostname}:{port} -- let's not do this one
    # if no port is given, port 80 is used (or 8000 if no permissions for port 80)
    # the first server with a full {ip}:{port} pair becaumes the default


    server_name foo.org www.foo.org;

    listen 8248 8080;
    listen 127.0.0.1:8248;

    error_page 404 403 402 401 err_40x.html;
    error_page 301 err_301.html;
    allowed_methods GET POST;
    root /html/pages;

    location = / {
        allowed_methods GET POST DELETE GET POST GET;
    }

    location / {
        allowed_methods GET POST DELETE;
        return kees /bla;
    }

    location /foo {
        root /bla/bla/bla;
        allowed_methods POST DELETE;

        autoindex on;
        index 1index.html index.php;
        index index.html;

        error_page 404 403 402 401 err_40x.html;
        error_page 301 err_301.html;
    }
}

server {

    listen 127.0.0.1:8248;
    server_name foo.com;

    error_page 404 index.html;
    error_page 301 test.html;
    allowed_methods GET POST;
    client_max_body_size 256k;

    location = / {
        allowed_methods GET POST DELETE GET POST GET;
    }

    location / {
        allowed_methods GET POST DELETE;
        client_max_body_size 54k;
    }

    location /foo {
        root /for/block/loc;
        allowed_methods POST DELETE;

        index 1index.html index.php;
        index index.html;

        error_page 403 err_403.xhtml;
        error_page 404 err_404.html;
        autoindex on;
    }
}
