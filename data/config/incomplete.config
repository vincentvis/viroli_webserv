# Rules for config files
#
# - There can only be server blocks, no other first level block is allowed
# - each server block needs at least the following parameters
#   - listen (in the format host:port)
#   - listen (in the format host:port)


server {

    listen 127.0.0.1:8248;
    server_name foo.org;

    error_page 404 index.html;
    error_page 301 test.html;
    allowed_methods GET POST;

    location = / {
        allowed_methods GET POST DELETE GET POST GET;
    }

    location / {
        allowed_methods GET POST DELETE;
    }

    location /foo {
        root /bla/bla/bla;
        allowed_methods POST DELETE;

        index 1index.html index.php;
        index index.html;

        error_page 403 err_403.xhtml;
        error_page 404 err_404.html;
        autoindex on;
    }
}

